---
---
[
  {% for post in site.posts  %}
    {% if post.locale  == 'en' %}
      {
        "title"    : "{{ post.title | escape }}",
        "category" : "{{ post.category }}",
        "tags"     : "{{ post.tags | join: ', ' }}",
        "url"      : "{{ site.url }}{{ post.url }}",
        "date"     : "{{ post.date }}",
        "locale"   : "{{ post.locale }}"
      } {% unless forloop.last %},{% endunless %}
    {% endif %}
  {% endfor %}
]
